<?xml version="1.0" encoding="UTF-8"?>
<plugin
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="core-cordova"
    version="1.0.0"
>
    <name>Aerogear Core SDK</name>
    <description>Aerogear Core SDK for Cordova</description>
    <license>Apache 2.0</license>
    <keywords>cordova,aerogear,mobile</keywords>

    <dependency id="core" version="1.0.0"/>

    <js-module src="www/metrics.js" name="cordova-metrics">
        <clobbers target="aerogear" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MobileCoreModule" >
                <param
                    name="android-package"
                    value="org.aerogear.mobile.core.MobileCoreModule"
                />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <source-file
            src="src/android/MobileCoreModule.java"
            target-dir="src/org/aerogear/mobile/core/MobileCoreModule"
        />
    </platform>
    
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MobileCoreModule">
                <param
                    name="ios-package"
                    value="AgsCore"
                />
            </feature>
        </config-file>

        <source-file src="src/ios/MobileCoreModule.m" />
        <header-file src="src/ios/MobileCoreModule.h" />
    </platform>

</plugin>
