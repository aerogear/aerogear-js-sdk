<?xml version="1.0" encoding="UTF-8"?>
<plugin
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-metrics"
    version="0.1.0"
>
    <name>Aerogear Metrics Plugin</name>
    <description>Aerogear Metrics Plugin for Cordova</description>
    <license>Apache 2.0</license>
    <keywords>cordova,aerogear,mobile</keywords>

    <dependency id="cordova-plugin-device" version="2.0.2"/>
    <dependency id="cordova-plugin-app-version" version="0.1.9"/>



    <js-module src="www/metrics.js" name="cordova-metrics">
        <clobbers target="aerogear" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MobileCoreModule" >
                <param
                    name="android-package"
                    value="org.aerogear.mobile.core.MobileCoreModule"
                />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <source-file
            src="src/android/MobileCoreModule.java"
            target-dir="src/org/aerogear/mobile/core/MobileCoreModule"
        />
    </platform>

</plugin>
