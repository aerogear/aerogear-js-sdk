<?xml version="1.0" encoding="UTF-8"?>
<plugin
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="core"
    version="1.0.0"
>
    <name>Aerogear Core SDK</name>
    <description>Aerogear Core SDK for Cordova</description>
    <license>Apache 2.0</license>
    <keywords>cordova,aerogear,mobile</keywords>

    <js-module src="www/bundle.js" name="core">
        <clobbers target="aerogear.core" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MobileCore" >
                <param
                    name="android-package"
                    value="org.aerogear.mobile.js.core.MobileCore"
                />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <source-file
            src="node_modules/@aerogear/android/MobileCore.java"
            target-dir="src/org/aerogear/mobile/js/core"
        />
        <source-file
            src="android/Core.java"
            target-dir="src/org/aerogear/mobile/js/core/cordova"
        />
    </platform>

</plugin>
