{
  "name": "@aerogearservices/core-cordova",
  "version": "1.0.0",
  "author": "Aerogear <aerogear@googlegroups.com>",
  "license": "Apache 2.0",
  "description": "Aerogear Core SDK for Cordova",
  "cordova": {
    "id": "core-cordova",
    "platforms": [
      "android"
    ]
  },
  "scripts": {
    "bundle": "node_modules/.bin/browserify dist/MobileCore.js -o dist/core-cordova.js",
    "build": "node_modules/.bin/tsc && npm run bundle",
    "clean": "rm -rf dist node_modules src/*.js src/*.map types",
    "clean:build": "npm run clean && npm install && npm run build"
  },
  "devDependencies": {
    "@types/node": "^9.6.2",
    "typescript": "^2.8.1",
    "@aerogearservices/core": "1.0.0"
  },
  "keywords": [
    "cordova",
    "aerogear",
    "mobile",
    "ecosystem:cordova",
    "cordova-android"
  ],
  "engines": {
    "cordovaDependencies": {
      "1.0.0": {
        "cordova-android": "7.1.0",
        "cordova-ios": "4.5.4"
      }
    }
  }
}